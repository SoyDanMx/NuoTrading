# Copia este archivo a .env y rellena los valores.
# cp .env.example .env

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/nuotrade
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nuotrade

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Backend Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (Exchange Integrations)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret

# Market Data APIs - OBLIGATORIO para precios reales
# Copia la clave tal como se muestra en https://finnhub.io/dashboard (puede ser 20 o 40 caracteres)
FINNHUB_API_KEY=

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Environment
ENVIRONMENT=development
DEBUG=True

# TimescaleDB Specific
TIMESCALEDB_TELEMETRY=off
